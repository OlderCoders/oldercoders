# top-most EditorConfig file
root = true

# UTF-8 Charset, Unix-style newlines with a newline ending every file and no trailing whitespace
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = tab
indent_size = 4

[*.{md,rb,rake,erb,yaml,yml,vue,js,json,jbuilder}]
indent_style = space
indent_size = 2

[*.conf]
indent_style = space

[*.md]
trim_trailing_whitespace = false
