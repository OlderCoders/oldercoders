<%= component 'global/forms/errors', errors: resource.errors.full_messages %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="input-field">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: t('devise.sessions.enter_email'), autofocus: true, autocomplete: "email" %>
  </div>

  <div class="input-field">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: t('devise.sessions.enter_password'), autocomplete: "current-password" %>
  </div>

  <div class="actions actions--form">
    <%= f.button t('global.log_in'), class: 'btn--primary' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="input-field">
      <label class="control">
        <%= f.check_box :remember_me %>
        <span><%= t 'devise.sessions.remember_me' %></span>
      </label>
    </div>
  <% end %>

<% end %>
