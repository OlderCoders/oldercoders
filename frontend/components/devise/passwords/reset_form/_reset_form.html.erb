<%= component 'global/forms/errors', errors: resource.errors.full_messages %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), class: 'form form--reset', html: { method: :post }) do |f| %>

  <div class="input-field">
    <%= f.label :email, t('devise.passwords.your_email') %>
    <p class="input-hint">
      <%= t 'devise.passwords.hint.email' %>
    </p>
    <%= f.email_field :email, placeholder: t('devise.placeholders.your_email'), autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions actions--form">
    <%= f.button "Send me reset password instructions", class: 'btn--primary' %>
  </div>


  <%- if controller_name != 'sessions' %>
    <p class="form__link">
      <%= t 'devise.passwords.new.remember_password' %>
      <%= link_to t('devise.passwords.new.sign_in'), new_session_path(resource_name) %>
    </p>
  <% end %>
<% end %>
