<% content_for :title, t('.title', name: @user.name, username: @user.username) %>

<article class="container">
  <header class="vcard">
    <h1 class="fn">
      <%= @user.name %>
    </h1>

    <p>
      <span class="age">
        <% if @user.profile.display_age? and @user.profile.birthday.present?  %>
          <%= t('.age', age: age(@user.profile.birthday)).html_safe %>
        <% else %>
          <%= t('.hide_age').sample %>
        <% end %>
      </span>
      <% if @user.profile.coding_since.present? %>
        <span class="age">
          <%= t('.coding_since', year: @user.profile.coding_since.in_time_zone.to_s(:year)) %>
        </span>
      <% end %>
    </p>
    <% if @user.profile.location.present? %>
      <p class="location adr">
        <%= @user.profile.location %>
      </p>
    <% end %>
  </header>

  <div class="body">
    <section class="bio">
      <%= @user.profile.bio %>
    </section>

    <section class="user-folow-status">
      <%= c 'accounts/relationships/form', account: @user, detail: true %>
    </section>
  </div>
</article>
